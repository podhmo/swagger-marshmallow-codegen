{
  "components": {
    "schemas": {
      "id": {
        "type": "string",
        "description": "ObjectId",
        "example": "541a9fd949b5ac0b00000000",
        "pattern": "[0-9a-f]{24}"
      },
      "Error": {
        "properties": {
          "code": {
            "format": "int32",
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        },
        "required": [
          "code",
          "message"
        ],
        "type": "object"
      },
      "Pet": {
        "properties": {
          "father": {
            "$ref": "#/components/schemas/Pet"
          },
          "id": {
            "$ref": "#/components/schemas/id"
          },
          "mother": {
            "$ref": "#/components/schemas/Pet"
          },
          "name": {
            "type": "string"
          },
          "shop": {
            "$ref": "#/components/schemas/Shop"
          },
          "tag": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name"
        ],
        "type": "object"
      },
      "Pets": {
        "items": {
          "$ref": "#/components/schemas/Pet"
        },
        "type": "array"
      },
      "Cat": {
        "description": "A representation of a cat",
        "required": ["huntingSkill"],
        "allOf": [
          {"$ref": "#/components/schemas/Pet"},
          {
            "type": "object",
            "properties": {
              "huntingSkill": {
                "type": "string",
                "description": "The measured skill for hunting",
                "default": "lazy",
                "enum": ["clueless", "lazy", "adventurous", "aggressive"]
              }
            }
          }
        ]
      },
      "Dog": {
        "description": "A representation of a dog",
        "required": ["packSize"],
        "allOf": [
          {"$ref": "#/components/schemas/Pet"},
          {
            "type": "object",
            "properties": {
              "packSize": {
                "type": "integer",
                "description": "the size of the pack the dog is from",
                "default": 0,
                "minimum": 0
              }
            }
          }
        ]
      },
      "Shop": {
        "properties": {
          "id": {
            "$ref": "#/components/schemas/id"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "properties": {
              "content": {
                "type": "string"
              },
              "position": {
                "type": "string"
              }
            },
            "type": "object"
          }
        },
        "required": [
          "id",
          "name"
        ],
        "type": "object"
      }
    }
  },
  "openapi": "3.0.0"
}
